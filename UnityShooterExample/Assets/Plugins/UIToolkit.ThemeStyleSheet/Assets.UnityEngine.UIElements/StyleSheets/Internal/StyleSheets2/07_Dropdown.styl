@import "../_Theme"

// alias
alias--overlay                 = // string: .unity-base-dropdown
alias--dropdown                = // string: .unity-base-dropdown .unity-base-dropdown__container-outer.{state}
alias--list-view               = // string: .unity-base-dropdown .unity-base-dropdown__container-outer.{state} .unity-list-view
alias--list-item               = // string: .unity-base-dropdown .unity-base-dropdown__container-outer.{state} .unity-list-view__item
alias--dropdown-item           = // string: .unity-base-dropdown .unity-base-dropdown__container-outer         .unity-base-dropdown__item.{state}
alias--dropdown-item-checkmark = // string: .unity-base-dropdown .unity-base-dropdown__container-outer         .unity-base-dropdown__item.{state} .unity-base-dropdown__checkmark
alias--dropdown-item-text      = // string: .unity-base-dropdown .unity-base-dropdown__container-outer         .unity-base-dropdown__item.{state} .unity-base-dropdown__label
alias--empty-list-label        = // string: .unity-base-dropdown .unity-base-dropdown__container-outer         .unity-list-view__empty-label.{state}

// style
.selector--dropdown                // styles: add-theme(dropdown     )
.selector--dropdown-item           // styles: add-theme(dropdown-item)
.selector--dropdown-item-checkmark // styles: add-theme(checkmark    )
.selector--dropdown-item-text      // styles: add-theme(null         )
.selector--empty-list-label        // styles: add-theme(dropdown-item)

// style
.selector--overlay                 // styles: add-layout(absolute, auto, auto, (0px             ), (0px            ), (0px                ))
.selector--dropdown                // styles: add-layout(null,     auto, auto, (0px             ), (1px            ), (0px                ))
