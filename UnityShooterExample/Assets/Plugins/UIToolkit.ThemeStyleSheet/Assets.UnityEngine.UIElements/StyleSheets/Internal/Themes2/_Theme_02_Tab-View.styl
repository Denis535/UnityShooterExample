@import "../_Utils"

// tab-header
theme--tab-header------------normal          = hsla(  0,   0%,  90%, 1.00) bg(hsla( 60, 1%, 30%, 1.00) img(null, null)) bd(hsla( 30, 10%, 30%, 1.00) 4px)
theme--tab-header------------hover           = hsla(  0,   0%, 100%, 1.00) bg(hsla( 60, 1%, 31%, 1.00) img(null, null)) bd(hsla( 30, 10%, 50%, 1.00) 4px)
theme--tab-header------------active          = hsla(  0,   0%, 100%, 1.00) bg(hsla( 60, 1%, 29%, 1.00) img(null, null)) bd(hsla( 30, 10%, 20%, 1.00) 4px)
// tab-header
theme--tab-header------------checked         = hsla(  0,   0%,  90%, 1.00) bg(hsla( 60, 1%, 30%, 1.00) img(null, null)) bd(hsla( 30, 10%, 30%, 1.00) 4px)
theme--tab-header------------checked--hover  = hsla(  0,   0%, 100%, 1.00) bg(hsla( 60, 1%, 31%, 1.00) img(null, null)) bd(hsla( 30, 10%, 50%, 1.00) 4px)
theme--tab-header------------checked--active = hsla(  0,   0%, 100%, 1.00) bg(hsla( 60, 1%, 29%, 1.00) img(null, null)) bd(hsla( 30, 10%, 20%, 1.00) 4px)

// tab-header-underline
theme--tab-header-underline--normal          = null                        bg(hsla( 60, 1%, 80%, 0.00) img(null, null)) bd(hsla(  0,  0%,  0%, 0.00) 4px)
theme--tab-header-underline--hover           = null                        bg(hsla( 60, 1%, 81%, 0.00) img(null, null)) bd(hsla(  0,  0%,  0%, 0.00) 4px)
theme--tab-header-underline--active          = null                        bg(hsla( 60, 1%, 79%, 0.00) img(null, null)) bd(hsla(  0,  0%,  0%, 0.00) 4px)
// tab-header-underline
theme--tab-header-underline--checked         = null                        bg(hsla( 60, 1%, 80%, 1.00) img(null, null)) bd(hsla(  0,  0%,  0%, 0.00) 4px)
theme--tab-header-underline--checked--hover  = null                        bg(hsla( 60, 1%, 81%, 1.00) img(null, null)) bd(hsla(  0,  0%,  0%, 0.00) 4px)
theme--tab-header-underline--checked--active = null                        bg(hsla( 60, 1%, 79%, 1.00) img(null, null)) bd(hsla(  0,  0%,  0%, 0.00) 4px)
