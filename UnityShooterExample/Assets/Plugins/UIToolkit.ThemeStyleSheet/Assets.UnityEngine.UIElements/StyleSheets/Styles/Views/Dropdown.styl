@import "../../Themes/_Themes"

// alias
alias--overlay                         = // string: .unity-base-dropdown
alias--dropdown                        = // string: .unity-base-dropdown .unity-base-dropdown__container-outer.{state}
alias--dropdown-item                   = // string: .unity-base-dropdown .unity-base-dropdown__container-outer         .unity-base-dropdown__item.{state}
alias--dropdown-item-content           = // string: .unity-base-dropdown .unity-base-dropdown__container-outer         .unity-base-dropdown__item.{state} .unity-base-dropdown__item-content
alias--dropdown-item-content-checkmark = // string: .unity-base-dropdown .unity-base-dropdown__container-outer         .unity-base-dropdown__item.{state} .unity-base-dropdown__item-content .unity-base-dropdown__checkmark
alias--dropdown-item-content-text      = // string: .unity-base-dropdown .unity-base-dropdown__container-outer         .unity-base-dropdown__item.{state} .unity-base-dropdown__item-content .unity-base-dropdown__label
alias--empty-list-label                = // string: .unity-base-dropdown .unity-base-dropdown__container-outer         .unity-list-view__empty-label.{state}

// style
.selector--dropdown                        // styles: add-theme(dropdown     )
.selector--dropdown-item                   // styles: add-theme(dropdown-item)
